<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/wallet_frame"
            android:layout_width="match_parent"
            android:layout_height="288dp"
            android:layout_marginHorizontal="9dp"
            android:layout_marginTop="21dp"
            android:background="@drawable/rectangle_wallet">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginTop="29dp"
                android:layout_toStartOf="@+id/wallet_balance"
                android:fontFamily="@font/roboto_bold_700"
                android:gravity="top"
                android:text="@string/rupee"
                android:textColor="#3A3B59"
                android:textSize="32sp" />

            <TextView
                android:id="@+id/wallet_balance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerInParent="true"
                android:layout_marginTop="29dp"
                android:fontFamily="@font/roboto_bold_700"
                android:text="500.00"
                android:textColor="#3A3B59"
                android:textSize="32sp" />

            <TextView
                android:id="@+id/total_balan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerInParent="true"
                android:layout_marginTop="75dp"
                android:alpha="0.4"
                android:fontFamily="@font/roboto_regular_400"
                android:gravity="top"
                android:text="@string/total_balance"
                android:textColor="#3A3B59"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/unplayed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="34dp"
                android:layout_marginTop="113dp"
                android:alpha="0.4"
                android:fontFamily="@font/roboto_regular_400"
                android:gravity="top"
                android:text="@string/unplayed"
                android:textColor="#3A3B59"
                android:textSize="14sp" />

            <ImageView
                android:id="@+id/info_unplayed"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_alignParentTop="true"
                android:layout_marginStart="5dp"
                android:layout_marginTop="115dp"
                android:layout_toEndOf="@+id/unplayed"
                android:gravity="top"
                android:src="@drawable/i_wallet" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="34dp"
                android:layout_marginTop="135dp"
                android:fontFamily="@font/roboto_regular_400"
                android:gravity="top"
                android:text="@string/rupee"
                android:textColor="#3A3B59"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/unplayed_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="44dp"
                android:layout_marginTop="135dp"
                android:fontFamily="@font/roboto_regular_400"
                android:gravity="top"
                android:text="400.00"
                android:textColor="#3A3B59"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/winning"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="34dp"
                android:layout_marginTop="162dp"
                android:alpha="0.4"
                android:fontFamily="@font/roboto_regular_400"
                android:textColor="#3A3B59"
                android:textSize="14sp"
                android:gravity="top"
                android:text="@string/winning" />

            <ImageView
                android:id="@+id/info_winning"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_alignParentTop="true"
                android:layout_marginStart="2dp"
                android:layout_marginTop="164dp"
                android:layout_toEndOf="@id/winning"
                android:gravity="top"
                android:src="@drawable/i_wallet" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="34dp"
                android:layout_marginTop="184dp"
                android:fontFamily="@font/roboto_regular_400"
                android:gravity="top"
                android:text="@string/rupee"
                android:textColor="#3A3B59"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/winning_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="44dp"
                android:layout_marginTop="184dp"
                android:fontFamily="@font/roboto_regular_400"
                android:gravity="top"
                android:text="50.00"
                android:textColor="#3A3B59"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tv_cash_bonus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="34dp"
                android:layout_marginTop="211dp"
                android:alpha="0.4"
                android:fontFamily="@font/roboto_regular_400"
                android:gravity="top"
                android:text="Cash Bonus"
                android:textColor="#3A3B59"
                android:textSize="14sp" />

            <ImageView
                android:id="@+id/info_cash_bonus"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_alignParentTop="true"
                android:layout_marginStart="2dp"
                android:layout_marginTop="213dp"
                android:layout_toEndOf="@id/tv_cash_bonus"
                android:gravity="top"
                android:src="@drawable/i_wallet" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="34dp"
                android:layout_marginTop="233dp"
                android:fontFamily="@font/roboto_regular_400"
                android:gravity="top"
                android:text="@string/rupee"
                android:textColor="#3A3B59"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/cash_bonus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="44dp"
                android:layout_marginTop="233dp"
                android:fontFamily="@font/roboto_regular_400"
                android:gravity="top"
                android:text="50.00"
                android:textColor="#3A3B59"
                android:textSize="18sp" />

            <Button
                android:id="@+id/button_addMoney"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="113dp"
                android:layout_marginEnd="25dp"
                android:background="@drawable/custom_button"
                android:clickable="true"
                android:fontFamily="@font/roboto_medium_500"
                android:foreground="?android:attr/selectableItemBackground"
                android:paddingHorizontal="10dp"
                android:text="@string/add_money_wallet"
                android:textAllCaps="false"
                android:textColor="#FFFFFF"
                android:textSize="18sp" />

            <Button
                android:id="@+id/button_withdraw"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="171dp"
                android:layout_marginEnd="25dp"
                android:background="@drawable/custom_button_withdraw"
                android:clickable="true"
                android:fontFamily="@font/roboto_medium_500"
                android:foreground="?android:attr/selectableItemBackground"
                android:paddingHorizontal="25dp"
                android:text="@string/withdraw_wallet"
                android:textAllCaps="false"
                android:textColor="#1D9FFF"
                android:textSize="18sp" />

        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:fontFamily="@font/roboto_regular_400"
            android:paddingVertical="10dp"
            android:text="@string/transaction_history"
            android:textColor="#000000"
            android:textSize="14sp" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/firstfew"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:itemCount="4"
            tools:listitem="@layout/transaction_recycler_item" />

        <TextView
            android:id="@+id/seeAllTransactions"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="10dp"
            android:fontFamily="@font/roboto_bold_700"
            android:text="@string/see_all_transactions"
            android:textColor="#1DAEFF"
            android:textSize="15sp" />


    </LinearLayout>
</ScrollView>