<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingHorizontal="16dp"
        android:fontFamily="@font/roboto_regular_400">

        <LinearLayout
            android:id="@+id/withdraw_balance_blue_bg"
            android:layout_width="match_parent"
            android:layout_height="95dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/withdraw_balance_blue_bg"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:paddingHorizontal="22dp">


            <TextView
                android:id="@+id/withdrawble_balance_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="@string/withdraw_balance_amount"
                android:textColor="#2B2B2B"
                android:textSize="18sp"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/withdraw_balance_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="@string/withdraw_balance_text"
                android:textColor="@color/black"
                android:textSize="12sp"
                android:textStyle="bold"

                />

            <TextView
                android:id="@+id/below_withdrawable_text"
                android:layout_width="298dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:alpha="0.5"
                android:paddingHorizontal="20dp"
                android:text="@string/below_withdrawable_text"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="11sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/withdraw_balance_white_bg"
            android:elevation="4dp"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:paddingHorizontal="18dp">

            <TextView
                android:id="@+id/amount_to_withdraw_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="35dp"
                android:text="@string/amount_to_withdraw"
                android:textColor="@color/black"
                android:textSize="12sp"
                android:textStyle="bold" />


            <EditText
                android:labelFor="@id/amount_to_withdraw_text"
                android:id="@+id/amount_to_withdraw"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="13dp"
                android:backgroundTint="@color/light_grey"
                android:ems="10"
                android:inputType="number"
                android:text="@string/withdraw_balance_amount"
                android:textAlignment="center"
                android:textColor="#2B2B2B"
                android:textSize="18sp"
                android:textStyle="bold"
                android:autofillHints=""
                tools:ignore="LabelFor" />

            <TextView
                android:id="@+id/funds_will_be_transferred_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_marginTop="22dp"
                android:text="@string/funds_will_be_transferred_text"
                android:textColor="@color/black"
                android:textSize="12sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/paytm_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/withdraw_paytm"
                    android:contentDescription="@string/todo" />

                <TextView
                    android:id="@+id/paytm_wallet_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:text="@string/paytm_wallet_text"
                    android:textColor="@color/black"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/link_account_paytm"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="end"
                    android:text="@string/link_account"
                    android:textColor="#1D9FFF"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:id="@+id/greenTickAndArrowPaytm"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="start"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <ImageView
                        android:id="@+id/greenTickPaytm"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="16dp"
                        android:background="@drawable/green_tick_withdraw"
                        android:contentDescription="@string/todo" />

                    <ImageView
                        android:id="@+id/arrow_paytm"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:background="@drawable/withdraw_arrow"
                        android:contentDescription="@string/todo" />
                </LinearLayout>


            </LinearLayout>

            <ImageView
                android:id="@+id/long_line_one"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@drawable/withdraw_long_line"
                android:contentDescription="@string/todo" />


            <LinearLayout
                android:id="@+id/arrow_upi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/upi_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/withdraw_upi_icon"
                    android:contentDescription="@string/todo" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/receive_in_upi"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/receive_in_upi"
                        android:textColor="@color/black"
                        android:textSize="12sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/registered_upi_id"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="1dp"
                        android:alpha="0.4"
                        android:text="@string/registered_upi_id"
                        android:textColor="@color/black"
                        android:textSize="11sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="end"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/greenTickUpi"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="16dp"
                        android:background="@drawable/green_tick_withdraw"
                        android:visibility="gone"
                        android:contentDescription="@string/todo" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:background="@drawable/withdraw_arrow"
                        android:contentDescription="@string/todo" />
                </LinearLayout>


            </LinearLayout>


            <ImageView
                android:id="@+id/long_line_two"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:background="@drawable/withdraw_long_line"
                android:contentDescription="@string/todo" />

            <LinearLayout
                android:id="@+id/arrow_bank_transfer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/bank_transfer_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/withdraw_bank_transfer_icon"
                    android:contentDescription="@string/todo" />

                <TextView
                    android:id="@+id/bank_transfer_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:text="@string/bank_transfer_text"
                    android:textColor="@color/black"
                    android:textSize="11sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="end"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/greenTickBankTransfer"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="16dp"
                        android:background="@drawable/green_tick_withdraw"
                        android:visibility="gone"
                        android:contentDescription="@string/todo" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:background="@drawable/withdraw_arrow"
                        android:contentDescription="@string/todo" />
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="horizontal"
            android:baselineAligned="false">


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/daily_withdrawal_limit_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/daily_withdrawal_limit_text"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="11sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/daily_withdrawal_limit_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:text="@string/daily_withdrawal_limit"
                    android:textColor="#270075"
                    android:textSize="14sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/min_withdrawable_amount_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/min_withdrawable_amount_text"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="11sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/min_withdrawal_amount_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:text="@string/min_withdrawal_amount_value"
                    android:textColor="#270075"
                    android:textSize="14sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/withdrawal_commission_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/withdrawal_commission_text"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="11sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/withdrawal_commission_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:text="@string/withdrawal_commission_value"
                    android:textColor="#270075"
                    android:textSize="14sp"
                    android:textStyle="bold" />
            </LinearLayout>

        </LinearLayout>

        <Button
            android:id="@+id/withdraw_now_button"
            android:layout_width="match_parent"
            android:layout_height="39dp"
            android:layout_marginTop="36dp"
            android:background="@drawable/withdraw_now_blue_bg"
            android:text="@string/withdraw_now"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="12sp" />


    </LinearLayout>
</ScrollView>